{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "NodeNext"
  },
  "include": ["**/*.ts", "**/*.svg", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../libs/skiff-crypto" },
    { "path": "../../libs/skiff-front-search" },
    { "path": "../../libs/skiff-front-utils" },
    { "path": "../../libs/skiff-graphql" },
    { "path": "../../libs/skiff-front-graphql" },
    { "path": "../../libs/skiff-utils" },
    { "path": "../../libs/skiff-i18n" }
  ]
}
